<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="JesseAdminApp.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <VerticalStackLayout Spacing="25" Padding="30">
        <Button Text="Financieel Overzicht"
                Clicked="OnFinancieelOverzichtClicked" />

        <Button Text="Klantinformatie"
                Clicked="OnKlantinformatieClicked" />

        <Button Text="Waar staan de facturen?"
                Clicked="SendToPathFacturen" />

        <!-- Entry to display the path, initially hidden -->
        <Entry x:Name="PathDisplayEntry"
               IsReadOnly="True"
               IsVisible="False"
               Placeholder="Path will be displayed here"
               HorizontalOptions="FillAndExpand" />
    </VerticalStackLayout>

</ContentPage>
